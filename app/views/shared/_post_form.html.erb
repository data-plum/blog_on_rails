<%= form_for @post, html: { class: 'form-inline special-form' } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.text_field :content, placeholder: "Type your text here...", class: 'form-control input-lg' %>
  </div>
  <%= f.submit "Post", class: "btn btn-danger btn-lg" %>
<% end %>
