<% provide(:title, 'post') %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @post.user %>
        <%= @post.user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>

  <div class="col-md-4">
    <section class="user_info">
      <p>
        <%= @post.content %>
      </p>

      <div></div>
    </section>
  </div>

  <section class="post_form">
    <%= render 'shared/comment_form' %>
  </section>


<div class="col-md-8">
    <% if @post.comments.any? %>
      <h3>Comments (<%= @post.comments.count %>)</h3>
      <ol class="posts">
      <% @post.comments.each do |comment| -%>
     
      <li id="<%= comment.id %>">
        <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
        <span class="user"><%= link_to comment.user.name, comment.user %></span>
        <span class="timestamp">
          Commented <%= time_ago_in_words(comment.created_at) %> ago.
        </span>
      </li>
        <p>
          <%= comment.content %>
        </p>
      <% end -%>
    <% end %>
  </div>


</div>
