<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>

    <% if @user == current_user %>
      <section class="post_form">
        <%= render 'shared/post_form' %>
      </section>
    <% end %>
  </aside>

  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
  </div>
</div>
