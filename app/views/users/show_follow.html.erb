<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-3">
      <%= render 'shared/pointed_user' %>
  </aside>
  <div class="col-md-6">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow list-group">
        <%= render @users %>
      </ul>
      <div class="text-center">
        <%= will_paginate %>
      </div>
    <% end %>
  </div>
</div>
